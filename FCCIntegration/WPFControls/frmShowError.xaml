<Window x:Class="FCCIntegration.WPFControls.frmShowError"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:gif="http://wpfanimatedgif.codeplex.com" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800"
        Width="800" Height="700"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Name="txtMsg" Grid.Row="0" TextAlignment="Center" FontSize="15" TextWrapping="Wrap"></TextBlock>
        <WebBrowser Width="600" Height="400"  Name="ImgError" Grid.Row="1"></WebBrowser >
        <Button Name="btnErrorExit" Content="Выход" Grid.Row="2" FontSize="20" Click="btnErrorExit_Click"/>
    </Grid>
</Window>
